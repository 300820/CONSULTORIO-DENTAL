
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/CSS/LOGIN.css" rel="stylesheet" />
    <title>LOGIN</title>
</head>
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5"></h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div class="brand_logo_container">
                      
                           <img src="~/IMG/LOGO_DENTAL.jpg"  />
                    </div>
                    <div id="login-box" class="col-md-12">
                        <form action="@Url.Action("LOGIN","Acceso")" method="post">
                            <h3 class="text-center text-info">CONSULTORIO DENTAL</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">USUARIO:</label><br>
                                <input type="text" name="correo" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">CONTRASEÑA:</label><br>
                                <input type="text" name="Clave" id="password" class="form-control">
                            </div>
                           
                            <div class="form-group">

                                <input type="submit" name="submit" class="btn btn-info btn-md" value="ENTRAR">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="@Url.Action("REGISTRO","Acceso")" class="ml-2">Registrarse</a>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>

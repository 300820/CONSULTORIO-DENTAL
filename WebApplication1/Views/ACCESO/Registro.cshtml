
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Registro</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/CSS/ACCESO.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <center><div class="panel-title">REGISTRATE</div></center>
                </div>
                <div style="padding-top:30px" class="panel-body">

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    <form action="@Url.Action("RESGISTRO","Acceso")" method="post">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="nombre" class="form-control input_user" value="" placeholder="NOMBRE ">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input type="email" name="correo" class="form-control input_user" placeholder="CORREO ELECTRONICO">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" name="Clave" class="form-control input_user" values="" placeholder="CONTRASEÑA">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            <input type="password" name="ConfirmarClave" class="form-control input_user" values="" placeholder="VERIFICAR CONTRASEÑA">
                        </div>
                   

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->
                            <center>
                                <div class="col-sm-12 controls">
                                    <a id="btn-login" href="#" class="btn btn-success">REGISTRARSE  </a>
                                </div>
                            </center>
                            <br>
                            <br>
                            <br>
                            <br>
                            <center>
                                Tienes cuenta?<a href="@Url.Action("LOGIN","Acceso")" class="ml-2">Iniciar Sesion</a>
                            </center>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>
